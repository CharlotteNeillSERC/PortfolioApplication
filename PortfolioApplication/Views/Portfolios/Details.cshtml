@model PortfolioApplication.Models.Portfolio

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.ProjectName)</h1>

<div>
    <h4>@Html.DisplayFor(model => model.ProjectName) Further Info</h4>
    <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    Project Name:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ProjectName)
                </dd>
                <dt class = "col-sm-2">
                    Project Description:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ProjectDescription)
                </dd>
            </dl>
</div>
<div>
    <a asp-action="Index">Back</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
