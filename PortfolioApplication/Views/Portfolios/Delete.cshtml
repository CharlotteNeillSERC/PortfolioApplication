@model PortfolioApplication.Models.Portfolio

@{
    ViewData["Title"] = "Delete";
}

<h1>@Html.DisplayFor(model => model.ProjectName)</h1>
    <h4>Are you sure you want to delete this project?</h4>
        <div>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    Project Name:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ProjectName)
                </dd>
                <dt class = "col-sm-2">
                    Project Description:
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ProjectDescription)
                </dd>
            </dl>
            <form asp-action="Delete">
                <a asp-action="Index">Back</a>
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" style="margin-left: 170px;" />
            </form>
        </div>

