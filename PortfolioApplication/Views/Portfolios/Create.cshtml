@model PortfolioApplication.Models.Portfolio

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add Project</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Enter Project Details</h5>
            </div>
            <div class="card-body">
            <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="ProjectName" class="control-label  mb-3">Project Name:</label>
                        <input asp-for="ProjectName" class="form-control" />
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="ProjectDescription" class="control-label  mb-3">Project Description:</label>
                        <textarea rows="4" asp-for="ProjectDescription" class="form-control"></textarea>
                        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col text-center">
                        <input type="submit" value="Add" class="btn stylebutton" />
                    </div>
            </form>
            </div>
            <div class="card-footer">
                <div>
                    <a asp-action="Index">Back to all projects</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
